<Window x:Class="Life.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Life"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="BoardGrid" HorizontalAlignment="Stretch" Margin="35,50,35,100" VerticalAlignment="Stretch">
        </Grid>
        <TextBox x:Name="widthField" HorizontalAlignment="Left" Height="23" Margin="128,350,0,0" TextWrapping="Wrap" Text="Width" VerticalAlignment="Top" Width="120"/>
        <Label Content="Dimensions:" HorizontalAlignment="Left" Margin="35,347,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="heightField" HorizontalAlignment="Left" Height="23" Margin="274,350,0,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" Width="120"/>
        <Button Content="Change dimensions!" HorizontalAlignment="Left" Margin="423,350,0,0" VerticalAlignment="Top" Width="146" RenderTransformOrigin="0.062,0.6"/>
        <Button x:Name="nextButton" Content="Next!" HorizontalAlignment="Left" Margin="596,350,0,0" VerticalAlignment="Top" Width="75" Click="NextButton_Click"/>
        <Button x:Name="runButton" Content="Run!" HorizontalAlignment="Left" Margin="694,350,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="stopButton" Content="Stop!" HorizontalAlignment="Left" Margin="694,375,0,0" VerticalAlignment="Top" Width="75"/>


    </Grid>
</Window>
